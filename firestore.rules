rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is super_admin
    function isSuperAdmin() {
      return request.auth != null && 
             exists(/databases/$(database)/documents/user_roles/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/user_roles/$(request.auth.uid)).data.role == 'super_admin';
    }
    
    // Users collection - users can read/update their own profile, super_admin can read all
    // Role field is NOT stored here for security
    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || isSuperAdmin());
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && request.auth.uid == userId
                    && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['uid', 'email']);
    }
    
    // User roles collection - READ for authenticated users, WRITE only for super_admin
    // This allows super_admin to assign roles through the app
    // TEMPORARY: Allow authenticated users to create their own role during initial setup
    match /user_roles/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == userId; // Allow self-creation during setup
      allow update: if isSuperAdmin(); // Only super_admin can update roles
      allow delete: if false; // Prevent role deletion
    }
    
    // Default deny all other collections until specific rules are added
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
